extends layout
block content
    div.container
        div.p-2
            a.btn.btn-primary Add new event
        div
            table.table
                thead
                    tr
                        th(scope="col-3") Event
                        th(scope="col-6") Description
                        th(scope="col-1")
                tbody
                    each event, i in events
                        tr
                            td= event.name
                            td= event.description
                            td
                                a.btn.btn-primary.px-2 More info
